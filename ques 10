// write a program to input time in seconds and convert it into hours:minutes:second format
#include <stdio.h>

int main()
{
int sec1,hours,mins,sec2;
printf("Enter time in seconds=");
scanf("%d",&sec1);
hours=sec1/3600;
mins=(sec1%3600)/60;
sec2=sec1%60;
printf("%d:%d:%d",hours,mins,sec2);
    return 0;
}
