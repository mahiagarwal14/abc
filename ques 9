// write a program to calculate simple and compound interest
#include <stdio.h>

int main()
{
    float principal,rate,time,si=0,ci=0,amt,x=1;
    int i;
    printf("Enter the princiapl amount=");
    scanf("%f",&principal);
    printf("Enter the rate=");
    scanf("%f",&rate);
    printf("Enter the time=");
    scanf("%f",&time);
    si=(principal*rate*time)/100;
    for(i=0;i<(int)time;i++)
    {
        x=x*(1+rate/100);
    }
    amt=principal*x;
    ci=amt-principal;
    printf("Simple Interest= %f \n",si);
    printf("Compound Interest= %f \n",ci);
    
    return 0;
}
